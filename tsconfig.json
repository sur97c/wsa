{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@actions/*": ["./actions/*"],
      "@app/*": ["./app/*"],
      "@hooks/*": ["./hooks/*"],
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@providers/*": ["./providers/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"],
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
} 